{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/criteria/requirements",
  "title": "Requirements",
  "description": "This is a standardization of the set of requirements that serve as a basis for the security analysis",
  "type": "object",
  "propertyNames": { "pattern": "^[0-9]+$" },
  "patternProperties": {
    "^[0-9]+$": {
      "type": "object",
      "additionalProperties": false,
      "required": [ "en", "es", "references", "metadata" ],
      "properties": {
        "en": { "$ref": "#/definitions/language" },
        "es": { "$ref": "#/definitions/language" },
        "references": {
          "uniqueItems": true,
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "metadata": { "type": "object" }
      }
    }
  },
  "definitions": {
    "language": {
      "type": "object",
      "additionalProperties": false,
      "required": [ "title", "summary", "description" ],
      "properties": {
        "title": { "type": "string" },
        "summary": { "type": "string" },
        "description": { "type": "string" }
      }
    }
  }
}
