{
  "defaultSeverity": "error",
  "extends": [
    "tslint:all",
    "tslint-react"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules",
      "src/*.*",
      "src/components/About/**",
      "src/components/Avatar/**",
      "src/components/Logo/**",
      "src/components/Preloader/**",
      "src/utils/notifications.ts",
      "src/app.tsx",
      "src/index.spec.tsx"
    ]
  },
  "rules": {
    "completed-docs": [
      true,
      "interfaces"
    ],
    "no-implicit-dependencies": [
      true,
      "dev"
    ],
    // Disabling this rule is necessary to avoid a conflict with another one that checks for all variables to be typed.
    // View: https://github.com/palantir/tslint/issues/711
    "no-inferrable-types": false,
    "no-magic-numbers": [
      true,
      {
        "allowed-numbers": [
          -1,
          0,
          1,
          2,
          100
        ],
        "ignore-jsx": true
      }
    ]
  }
}
