{
  "defaultSeverity": "error",
  "extends": ["tslint:all", "tslint-react"],
  "linterOptions": {
    "exclude": [
      "node_modules",
      "*.ts",
      "src/app.tsx",
      "src/store/**",
      "src/graphics/**",
      "src/utils/**",
      "src/components/**",
      "src/styles/**",
      "src/scenes/Login/**",
      "src/scenes/Dashboard/**/utils.ts",
      "src/scenes/Dashboard/**/hooks.ts",
      "src/scenes/Dashboard/*.*",
      "src/scenes/Dashboard/components/AddEnvironmentsModal/**",
      "src/scenes/Dashboard/components/AddFilesModal/**",
      "src/scenes/Dashboard/components/AddOrganizationModal/**",
      "src/scenes/Dashboard/components/AddProjectModal/**",
      "src/scenes/Dashboard/components/AddRepositoriesModal/index.spec.tsx",
      "src/scenes/Dashboard/components/AddRepositoriesModal/RepositoryFields.tsx",
      "src/scenes/Dashboard/components/APITokenModal/**",
      "src/scenes/Dashboard/components/DeleteGroupModal/**",
      "src/scenes/Dashboard/components/NewsWidget/**",
      "src/scenes/Dashboard/containers/ChartsGenericView/components/ChartCols/index.tsx",
      "src/scenes/Dashboard/components/Vulnerabilities/UpdateDescription/index.spec.tsx",
      "src/scenes/Dashboard/components/Vulnerabilities/UpdateDescription/queries.ts",
      "src/scenes/Dashboard/components/Vulnerabilities/UpdateDescription/types.ts",
      "src/scenes/Dashboard/containers/FindingContent/components/buttoncol/index.tsx",
      "src/scenes/Dashboard/containers/GroupScopeView/**",
      "src/scenes/Dashboard/containers/ProjectSettingsView/DeleteGroup/**",
      "src/scenes/Dashboard/containers/VulnerabilitiesView/ActionButtons/HandleAcceptationButton/**",
      "src/scenes/Dashboard/containers/VulnerabilitiesView/ActionButtons/ReattackVulnButton/**",
      "src/scenes/Dashboard/containers/VulnerabilitiesView/index.tsx",
      "src/scenes/Registration/**"
    ]
  },
  "rules": {
    "ban-ts-ignore": false,
    "completed-docs": {
      "options": ["classes", "functions"]
    },
    "increment-decrement": {
      "options": "allow-post"
    },
    "invalid-void": false,
    "match-default-export-name": false,
    "no-async-without-await": false,
    "no-default-import": false,
    "no-floating-promises": false,
    // Disabling this rule is necessary to avoid a conflict with another one that checks for all variables to be typed.
    // View: https://github.com/palantir/tslint/issues/711
    "no-inferrable-types": false,
    "no-implicit-dependencies": [ true, "dev", ["components", "graphics",
      "resources", "scenes", "store", "styles", "typings", "utils"]
    ],
    "no-magic-numbers": false,
    "no-null-undefined-union": false,
    "no-submodule-imports": [true, "components", "graphics", "resources",
      "scenes", "store", "styles", "typings", "utils"],
    "no-tautology-expression": false,
    "no-unsafe-any": false,
    "ordered-imports": {
      "options": [
        {
          "grouped-imports": false,
          "import-sources-order": "case-insensitive",
          "named-imports-order": "case-insensitive",
          "module-source-path": "full"
        }
      ]
    },
    "strict-comparisons": false,
    "strict-string-expressions": false,
    "typedef": {
      "options": [
        "call-signature",
        "parameter",
        "arrow-parameter",
        "property-declaration",
        "variable-declaration",
        "member-variable-declaration"
      ]
    },
    "unnecessary-else": false,
    "variable-name": {
      "options": ["ban-keywords", "check-format"]
    }
  }
}
